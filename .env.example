# Database
DATABASE_URL="postgresql://user:password@localhost:5432/crms_framework"
DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/crms_framework"

# Application
PORT=4000
NODE_ENV=development
API_PREFIX=api/v1
CORS_ORIGIN=http://localhost:3000

# Authentication
JWT_SECRET=generate-with-openssl-rand-base64-32
JWT_EXPIRY=15m
JWT_REFRESH_SECRET=generate-with-openssl-rand-base64-32
JWT_REFRESH_EXPIRY=7d
MAX_FAILED_ATTEMPTS=5
LOCK_DURATION_MINUTES=30
PIN_EXPIRY_DAYS=90

# Encryption
ENCRYPTION_KEY=generate-with-openssl-rand-hex-32

# S3 Storage (MinIO or AWS S3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=crms-evidence
S3_REGION=us-east-1

# WhatsApp (Whapi)
WHAPI_URL=https://gate.whapi.cloud
WHAPI_TOKEN=your-whapi-bearer-token
ENABLE_WHATSAPP=false

# Feature Flags
ENABLE_MFA=true
ENABLE_USSD=true
ENABLE_OFFLINE=true
